<!DOCTYPE html>
<html>
<head>
    <title>Potencias</title>
</head>
<body>

    <h2>Calcular Cuadrado y Cubo</h2>

    <input type="number" id="numero" placeholder="Ingresa un número">
    <button onclick="calcular()">Calcular</button>

    <p id="resultadoCuadrado"></p>
    <p id="resultadoCubo"></p>

    <script>
        function calcular() {
            let num = Number(document.getElementById("numero").value);

            let cuadrado = calcularCuadrado(num);
            let cubo = calcularCubo(num);

            document.getElementById("resultadoCuadrado").innerText = 
                "Cuadrado: " + cuadrado;

            document.getElementById("resultadoCubo").innerText = 
                "Cubo: " + cubo;
        }

        // Función 1
        function calcularCuadrado(num) {
            return num * num;
        }

        // Función 2
        function calcularCubo(num) {
            return num * num * num;
        }
    </script>

</body>
</html>
